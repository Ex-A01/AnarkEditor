<Window x:Class="AnarkBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnarkBrowser"
        xmlns:lm2="clr-namespace:EvershadeEditor.LM2" 
        xmlns:hex="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
        mc:Ignorable="d"
        Title="Anark LM2 Editor" Height="600" Width="900">

    <Window.Resources>
        <local:ChunkTypeConverter x:Key="TypeConverter"/>

        <HierarchicalDataTemplate DataType="{x:Type lm2:ChunkEntry}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="2" Background="Transparent" MouseLeftButtonDown="Chunk_MouseLeftButtonDown">

                <TextBlock Text="📁" Foreground="Goldenrod" Margin="0,0,5,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="📄" Foreground="Gray" Margin="0,0,5,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasChildren}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="{Binding Type, Converter={StaticResource TypeConverter}}" FontWeight="SemiBold" Foreground="#333"/>

                <TextBlock Text="{Binding Size, StringFormat=' (Size: {0} b)'}" Foreground="Gray" FontStyle="Italic"/>
                <TextBlock Text="{Binding Index, StringFormat=' [Idx: {0}]'}" Foreground="LightGray" FontSize="10" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F0F0F0">
            <Button Content="📂 Load .data" Click="Button_Click" Padding="10,5" Margin="5"/>
            <Button Content="💾 Save .data" Click="Save_Click" Padding="10,5" Margin="5"/>
            <Button Content="📂 Decompress .data" Click="Decomp_Click" Padding="10,5" Margin="5"/>
            <TextBlock x:Name="StatusText" Text="Ready." VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="MainTree" Grid.Column="0" BorderThickness="0" Padding="5" 
                  SelectedItemChanged="MainTree_SelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="False"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="LightGray" Width="5"/>

            <Grid Grid.Column="2" x:Name="EditorPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Background="#EEE" Margin="0,0,0,5">
                    <TextBlock Text="Binary Editor" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
                    <Button Content="Apply Changes to Memory" Click="ApplyChunkChanges_Click" Margin="10,2"/>
                </StackPanel>

                <hex:HexEditor x:Name="HexEdit" Grid.Row="1" 
                           ForegroundSecondColor="Blue"
                />
            </Grid>

            <TextBlock x:Name="NoSelectionText" Grid.Column="2" Text="Select a data chunk to edit" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontSize="16"/>
        </Grid>
    </Grid>
</Window>