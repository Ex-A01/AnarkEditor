<Window x:Class="AnarkBrowser.FontEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NLG Font Editor" Height="600" Width="1150">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="💾 Save Font Chunk" Click="Save_Click" Padding="10,5" Margin="0,0,20,0"/>

            <Button x:Name="BtnPrev" Content="◀ Prev" Click="PrevPage_Click" Width="80" IsEnabled="False"/>

            <TextBlock x:Name="TxtPageInfo" Text="Page 1 / 1" 
               VerticalAlignment="Center" Margin="10,0" 
               FontWeight="Bold" Foreground="Black"/>

            <Button x:Name="BtnNext" Content="Next ▶" Click="NextPage_Click" Width="80" IsEnabled="False"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Global Settings" Margin="0,0,0,10">
            <WrapPanel Orientation="Horizontal" Margin="0,0,489,0">
                <StackPanel Margin="5">
                    <TextBlock Text="Font Name"/>
                    <TextBox Text="{Binding FontName}" Width="150"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Size"/>
                    <TextBox Text="{Binding FontSize}" Width="50"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Height"/>
                    <TextBox Text="{Binding Height}" Width="50"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Render H"/>
                    <TextBox Text="{Binding RenderHeight}" Width="50"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Page Size"/>
                    <TextBox Text="{Binding PageSize}" Width="60"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Spacing"/>
                    <TextBox Text="{Binding CharSpacing}" Width="40"/>
                </StackPanel>
            </WrapPanel>
        </GroupBox>

        <DataGrid x:Name="GlythList" Grid.Row="2" ItemsSource="{Binding Glyphs}" AutoGenerateColumns="False" CanUserAddRows="True" Margin="0,0,540,0" SelectionChanged="GlythList_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Char" Binding="{Binding Character}" IsReadOnly="True" Width="50"/>
                <DataGridTextColumn Header="Code (Int)" Binding="{Binding CodePoint}" Width="80"/>
                <DataGridTextColumn Header="Tex Width (A)" Binding="{Binding TextureWidth}" Width="100"/>
                <DataGridTextColumn Header="Advance (B)" Binding="{Binding Advance}" Width="100"/>
                <DataGridTextColumn Header="Offset (C)" Binding="{Binding Offset}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" 
        Margin="605,0,0,0" 
        Background="#222" 
        BorderBrush="#555" 
        BorderThickness="1">

            <Grid Width="512" Height="512">

                <Image x:Name="TextureHolder" 
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="NearestNeighbor"/>

                <Canvas x:Name="OverlayCanvas" 
                Background="Transparent"/>

            </Grid>

        </Border>
    </Grid>
</Window>